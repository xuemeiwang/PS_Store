        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ThumbnailImage)
        </th>
        <th>
